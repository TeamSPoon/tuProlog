<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alice.tuprologx.android.tuprologmobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme" >
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.DEFAULT" />

                <category android:name="android.intent.category.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.tuPrologActivity"
            android:label="@string/query"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.TheoriesDatabaseActivity"
            android:label="@string/theoryT" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.TheoryEditActivity"
            android:label="@string/title_new_edit_activity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <!-- <activity -->
        <!-- android:name=".TheoryImportListActivity" -->
        <!-- android:label="@string/app_name" > -->
        <!-- </activity> -->
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.TheoryImportActivity"
            android:label="@string/title_import_theory" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.LibraryImportActivity"
            android:label="@string/title_import_library" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.LibraryManagerActivity"
            android:label="@string/title_libraries"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.TheoryDescriptionActivity"
            android:label="@string/title_activity_theory_description" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.DescriptionActivity"
            android:label="@string/title_activity_description" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
        <activity
            android:name="alice.tuprologx.android.tuprologmobile.HistoryActivity"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>